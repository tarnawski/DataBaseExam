Rails.application.routes.draw do

  root 'tests#index'

  get 'sqlbox/index'
  get 'teacher/index'

  resources :databases
  
  resources :tests do
   resources :questions
   resources :results
  end

  resources :answers
  devise_for :users
  devise_for :models

  get 'tests/:id/prepare' => 'tests#prepare_test'
  get 'answers/prepare' => 'answers#prepare'
  get 'mytest' => 'tests#me'
  

end
