<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Question</th>
      <th>Answer a</th>
      <th>Answer b</th>
      <th>Answer c</th>
      <th>Answer d</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_answer.each do |answer| %>
      <tr>
        <td><%= answer.student_id %></td>
        <td><%= answer.question_id %></td>
        <td><%= answer.answer_a %></td>
        <td><%= answer.answer_b %></td>
        <td><%= answer.answer_c %></td>
        <td><%= answer.answer_d %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
Points: <%= @points %>  
<br>
Mark: <%= @mark %>  




