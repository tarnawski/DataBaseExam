= form_for [student, answer] do |f|
  - if answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - answer.errors.full_messages.each do |msg|
          %li= msg

  = @quest.id
  .br
  = @quest.content
  .form-group
    = @quest.answer_a
    = f.check_box :answer_a, class: 'form-control'
  
  .form-group
    = @quest.answer_b
    = f.check_box :answer_b, class: 'form-control'

  .form-group
    = @quest.answer_c
    = f.check_box :answer_c, class: 'form-control'

  .form-group
    = @quest.answer_d
    = f.check_box :answer_d, class: 'form-control'




  = f.submit
