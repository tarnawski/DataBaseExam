= form_for @database do |f|
  - if @database.errors.any?
    #error_explanation
      %h2= "#{pluralize(@database.errors.count, "error")} prohibited this database from being saved:"
      %ul
        - @database.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :adapter
    = f.text_field :adapter
  .field
    = f.label :encoding
    = f.text_field :encoding
  .field
    = f.label :host
    = f.text_field :host
  .field
    = f.label :pool
    = f.number_field :pool
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :database
    = f.text_field :database
  .field
    = f.label :image_path
    = f.text_field :image_path
  .actions
    = f.submit 'Save'
