= form_for @database do |f|
  - if @database.errors.any?
    #error_explanation
      %h2= "#{pluralize(@database.errors.count, "error")} prohibited this database from being saved:"
      %ul
        - @database.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Nazwa
    = f.text_field :name, class: 'form-control'
  .field
    = f.label :Komentarz
    = f.text_area :comment, class: 'form-control'
  .field
    = f.label :Adapter
    = f.text_field :adapter, class: 'form-control'
  .field
    = f.label :Kodowanie
    = f.text_field :encoding, class: 'form-control'
  .field
    = f.label :Host
    = f.text_field :host, class: 'form-control'
  .field
    = f.label :Pool
    = f.number_field :pool, class: 'form-control'
  .field
    = f.label :Użytkownik
    = f.text_field :username, class: 'form-control'
  .field
    = f.label :Hasło
    = f.text_field :password, class: 'form-control'
  .field
    = f.label :Baza
    = f.text_field :database, class: 'form-control'
  .field
    = f.label :Schemat
    = f.file_field :image
  .actions
    <br>
    = f.submit 'Zapisz, class: 'btn btn-primary'
<br>
