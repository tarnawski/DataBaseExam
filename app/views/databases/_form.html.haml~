= form_for @database do |f|
  - if @database.errors.any?
    #error_explanation
      %h2= "#{pluralize(@database.errors.count, "error")} prohibited this database from being saved:"
      %ul
        - @database.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .field
    = f.label :comment
    = f.text_area :comment, class: 'form-control'
  .field
    = f.label :adapter
    = f.text_field :adapter, class: 'form-control'
  .field
    = f.label :encoding
    = f.text_field :encoding, class: 'form-control'
  .field
    = f.label :host
    = f.text_field :host, class: 'form-control'
  .field
    = f.label :pool
    = f.number_field :pool, class: 'form-control'
  .field
    = f.label :username
    = f.text_field :username, class: 'form-control'
  .field
    = f.label :password
    = f.text_field :password, class: 'form-control'
  .field
    = f.label :database
    = f.text_field :database, class: 'form-control'
  .field
    = f.label :image_path
    = f.text_field :image_path, class: 'form-control'
  .actions
    = f.submit 'Save'
<br>
