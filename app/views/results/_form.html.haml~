= form_for [test, result] do |f|
  - if result.errors.any?
    #error_explanation
      %h2= "#{pluralize(result.errors.count, "error")} prohibited this result from being saved:"
      %ul
        - result.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :student_id
    = f.number_field :student_id
  .field
    = f.label :test_id
    = f.number_field :test_id
  .field
    = f.label :points
    = f.number_field :points
  .field
    = f.label :mark
    = f.text_field :mark
  .actions
    = f.submit 'Save'
