= form_for [test, question] do |f|
  - if question.errors.any?
    #error_explanation
      %h2= "#{pluralize(question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - question.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :content
    = f.text_area :content, class: 'form-control'

  .form-group
    = f.label :answer_a
    = f.text_area :answer_a, class: 'form-control'
  
  .form-group
    = f.label :answer_b
    = f.text_area :answer_b, class: 'form-control'

  .form-group
    = f.label :answer_c
    = f.text_area :answer_c, class: 'form-control'

  .form-group
    = f.label :answer_d
    = f.text_area :answer_d, class: 'form-control'

  .form-group
    = f.label :correct
    = f.number_field :correct, class: 'form-control'


  = f.submit, class: 'btn btn-default'
